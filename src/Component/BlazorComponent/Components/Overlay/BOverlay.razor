@namespace BlazorComponent
@inherits BDomComponentBase

<div class="@CssProvider.GetClass(this)" style="@CssProvider.GetStyle(this)" id="@Id"
	 @onclick="HandleOnClick"
	 @onclick:stopPropagation="true">
	<div class="@CssProvider.GetClass(this,"scrim")" style="@CssProvider.GetStyle(this,"scrim")" />
	@if (Value)
	{
	 <div class="@CssProvider.GetClass(this,"content")">
			@ChildContent
	 </div>
	}
</div>
