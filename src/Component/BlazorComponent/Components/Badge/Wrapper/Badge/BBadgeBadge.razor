@namespace BlazorComponent
@typeparam TBadge
@inherits ComponentPartBase<TBadge>

@if (Transition != null)
{
    <Transition Name="@Transition">
        <ShowTransitionElement Tag="span" Value="Value" class="@CssProvider.GetClass("badge")" style="@CssProvider.GetStyle("badge")">
            @RenderPart(typeof(BBadgeContent<>))
        </ShowTransitionElement>
    </Transition>
}
else
{
    <Element Tag="span" class="@CssProvider.GetClass("badge")" style="@CssProvider.GetStyle("badge")">
        @RenderPart(typeof(BBadgeContent<>))
    </Element>
}